[Unit]
Description             = Mithril signer service
StartLimitIntervalSec   = 0

[Service]
Type                    = simple
Restart                 = always
RestartSec              = 60
User                    = NODE_USER
EnvironmentFile         = MITHRIL_HOME/mithril-signer.env
ExecStart               = MITHRIL_HOME/mithril-signer -vvv
SyslogIdentifier        = MITHRIL_SERVICE

[Install]
WantedBy                = multi-user.target
